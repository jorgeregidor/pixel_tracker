<p id="notice"><%= notice %></p>

<h1><%= @provider.name %></h1>


 <p> <strong>URL new Pixel:</strong> <%= root_url %>pixel </p>
 <p> <strong>Method:</strong> POST </p>
 <p> <strong>Json:</strong> {"pixel": { "name": new_name, "provider_id": <%= @provider.id %>}} </p>
</p>

<br>
<%= link_to 'Edit', edit_provider_path(@provider) %> |
<%= link_to 'Back', root_path %>
<br>
<h3>Pixels</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Conversions</th>
    </tr>
  </thead>

  <tbody>
    <% @pixels.each do |pixel| %>
      <tr>
        <td><%= pixel.name %></td>
        <td><%= root_url %>images/conversion.png?trackid=<%= pixel.id %></td>
        <td><%= pixel.conversions.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @pixels, previous_label: "Before", next_label: "Next", class: "apple_pagination" %>