<p id="notice"><%= notice %></p>

<h1>Providers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <br>

  <%= link_to 'New Provider', new_provider_path %>

  <br>

  <tbody>
    <% @providers.each do |provider| %>
      <%= render 'provider', provider: provider %>
    <% end %>
  </tbody>
</table>

<%= will_paginate @providers, previous_label: "Before", next_label: "Next", class: "apple_pagination" %>

